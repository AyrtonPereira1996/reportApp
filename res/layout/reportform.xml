<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ReportForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="horizontal"
    tools:context="com.dpefz.reporteapp.ReportActivity" >

    <EditText
        android:id="@+id/txtDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDep"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblDep"
        android:ems="10"
        android:hint="@string/depart_reparti_"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#a0a0a0"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtApelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblApelido"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblApelido"
        android:ems="10"
        android:hint="Apelido do funcionário"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#a0a0a0"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDe"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblN"
        android:ems="10"
        android:hint="Nome do funcionário"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#a0a0a0"
        android:textSize="15sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/txtProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblProblema"
        android:ems="10"
        android:hint="Descreva o problema"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textColorHint="#a0a0a0"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/lblDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/por_favor_reporte_o_problema_preenchendo_os_campos_abaixo_"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/lblApelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_below="@+id/txtNome"
        android:text="@string/_apelido_do_funcion_rio_"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/lblDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtApelido"
        android:layout_below="@+id/txtApelido"
        android:text="@string/_departamento_reparti_o_"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/lblProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtProblema"
        android:layout_below="@+id/txtDepartamento"
        android:text="@string/_descri_o_do_problema_"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtHora"
        android:layout_alignLeft="@+id/txtHora"
        android:layout_alignRight="@+id/txtHora"
        android:layout_below="@+id/txtProblema"
        android:ems="10"
        android:hint="dd/mm/aa"
        android:inputType="text|date" />

    <TextView
        android:id="@+id/lblN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDataRegisto"
        android:layout_below="@+id/lblDe"
        android:layout_marginTop="19dp"
        android:text="@string/_nome_do_funcion_rio_"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDataRegisto"
        android:layout_marginTop="20dp"
        android:text="*Hora :"
        android:textColorHint="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lblN"
        android:layout_below="@+id/lblDataRegisto"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:hint="hh:mm"
        android:inputType="text|time" />

    <Button
        android:id="@+id/btnReportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#222"
        android:padding="10dp"
        android:text="Reportar"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtPiso"
        android:layout_alignParentRight="true"
        android:background="#fff"
        android:contentDescription="@string/todo"
        android:src="@drawable/god01"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lblDataRegisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/txtProblema"
        android:layout_marginTop="15dp"
        android:text="*Data :"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtPiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#a0a0a0"
        android:textSize="15sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPiso"
        android:layout_alignParentRight="true"
        android:text="*Piso :"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="sans" />

</RelativeLayout>